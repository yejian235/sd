<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable -->
<!-- TemplateBeginEditable name="head" -->
<!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
{* 包含脚本文件 *}
{insert_scripts files='common.js'}
</head>
<body>
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->
<div class="pt88">
<div class="tuangou_main">
  <div class="tuangou_subnav">
    <div class="lnav">
      <h2 class="titleall"> 全部</h2>
      <div class="tuangou_subnav_adpic">
        <input type="hidden" id="adPlaceHolder7">
        <ul>
                      <!-- TemplateBeginEditable name="团购列表右侧广告位" -->
<!-- #BeginLibraryItem "/library/ad_position.lbi" -->

{insert name='ads' id=$ads_id num=$ads_num}
 <!-- #EndLibraryItem -->
<!-- TemplateEndEditable -->
        </ul>
      </div>
    </div>
    <div class="bottom"> </div>
  </div>
  <div class="tuangou_ad01">
    <Div class="CENdiv">
      <div class="hd">
        <ul>
          <li>1</li>
          <li>2</li>
          <li>3</li>
          <li>4</li>
          <li>5</li>
        </ul>
      </div>
      <div class="bd">
        <ul>
            <!-- TemplateBeginEditable name="团购商品列表页右侧广告" -->
<!-- #BeginLibraryItem "/library/ad_position.lbi" -->

{insert name='ads' id=$ads_id num=$ads_num}
 <!-- #EndLibraryItem -->
<!-- TemplateEndEditable -->
       
        </ul>
      </div>
    </Div>
    <span class="blank10"></span>
    <div style="float: right; position: relative; width: 980px; z-index: 6">
      <div class="tuangou_today" id="tuangou_today"> <span class="title">今日团购</span> </div>
    </div>
    <span class="blank8"></span>
    <div class="tuangou_list">
      <ul id="pkgList" style="width:1000px;">
        
        <!-- {if $gb_list} 如果有团购活动 --> 
        <!-- {foreach from=$gb_list item=group_buy} 循环团购活动开始 -->
        <li class="titem"> <span class="tuangou_pic"> <a href="{$group_buy.url}" target="_blank" class="track"> <img alt="{$group_buy.goods_name|escape:html}" width="312" height="312" src="{$group_buy.goods_img}" style="display: inline; "> </a> </span>
          <h3><a target="_blank" title="{$group_buy.goods_name|escape:html}" style=" font-weight:bold" href="{$group_buy.url}">{$group_buy.goods_name|escape:html}</a></h3>
          <div> <span class="price"><em>{$group_buy.price_ladder.0.formated_price}</em></span> <span class="money"> <em class="yuanjia">{$group_buy.shop_price}</em> <em>省{$group_buy.jiesheng}</em> </span> <span class="buynum"><em>{$group_buy.cur_amount}</em>人已参团</span> </div>
        </li>
        
        <!--{/foreach}--> 
        <!-- {else} --> 
        <span style="margin:2px 10px; font-size:14px; line-height:36px;">{$lang.group_goods_empty}</span> 
        <!-- {/if} -->
        
      </ul>
      <script>
	  	$(".tuangou_list li").each(function(){
			var str=$(this).find("h3 a").text().replace(/<br>+/ig,"");
			$(this).find("h3 a").text(str)
		})
      </script>
    </div>
  </div>
</div>
</div>
<div id="PageFooter">
	<div class="PageFooter"><!-- #BeginLibraryItem "/library/page_footer.lbi" --> <!-- #EndLibraryItem --></div>
</div>
<script>
$(".CENdiv").slide({mainCell:".bd ul",titCell:".hd li",autoPlay:true,titOnClassName:"on"});
</script>
</body>
</html>
