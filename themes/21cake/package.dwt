<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<!-- TemplateBeginEditable name="doctitle" -->
<title>{$page_title}</title>
<!-- TemplateEndEditable --><!-- TemplateBeginEditable name="head" --><!-- TemplateEndEditable -->
<link rel="shortcut icon" href="favicon.ico" />
<link rel="icon" href="animated_favicon.gif" type="image/gif" />
<link href="{$ecs_css_path}" rel="stylesheet" type="text/css" />
{* 包含脚本文件 *}
{insert_scripts files='common.js'}
</head>
<body>
<!-- #BeginLibraryItem "/library/page_header.lbi" --><!-- #EndLibraryItem -->

<div class="pt88">
	<div class="wrapper">
    	<div class="bread-crumbs">{$ur_here}</div>
        <div class="helpTit"><h2>{$lang.package_list}</h2></div>
        <div class="ValuePacks">
        	<table width="100%" border="0" cellpadding="0" cellspacing="0">
            	<tr>
                	<th width="" style="padding:5px;">{$lang.package_name}</th>
                    <th width="25%">{$lang.package_goods}</th>
                    <th width="">{$lang.desc}</th>
                    <th width="">活动时间</th>
                    <th width="">礼包价格</th>
                    <th width="">{$lang.heart_buy}</th>
                </tr>
            </table>
            <!-- {foreach from=$list item=val} -->
            <table width="100%" border="0" cellpadding="0" cellspacing="0">
                <tr>
                	<td width="15%" align="center"><h2 style="padding-right:20px; word-wrap:break-word; word-break:break-all">{$val.act_name}</h2></td>
                    <td width="25%">
                    	<!-- {foreach from=$val.goods_list item=goods} -->
                        <div class="pro">
                        	<div class="img"><a href="goods.php?id={$goods.goods_id}" target="_blank"><img src="{$goods.goods_thumb}" width="50" height="50" /></a></div>
                            <div class="text"><span class="f_user_info"><a href="goods.php?id={$goods.goods_id}" target="_blank" class="f6">{$goods.goods_name}</a></span><span class="num"><em>×</em>{$goods.goods_number}</span></div>
                        </div>
                        <!-- {/foreach} -->
                    </td>
                    <td width="25%" align="center"><h2 style="padding-right:20px; word-wrap:break-word; word-break:break-all">{$val.act_desc}</h2></td>
                    <td width="" align="center">{$val.start_time}<br />至<br />{$val.end_time}</td>
                    <td width="" align="center"><span>{$val.package_price}</span><del>{$val.subtotal}</del></td>
                    <td width="" align="center" bgcolor="#fdf7f2"><a href="javascript:addPackageToCart({$val.act_id})" style="background:transparent"><img src="images/bnt_buy_1.gif" alt="{$lang.add_to_cart}" /></a></td>
                </tr>
            </table>
            <!-- {/foreach} -->
        </div>
    </div>
</div>

<!--友情链接 start-->
<!--{if $img_links  or $txt_links }-->
<div id="bottomNav" class="box">
 <div class="box_1">
  <div class="links clearfix">
    <!--开始图片类型的友情链接{foreach from=$img_links item=link}-->
    <a href="{$link.url}" target="_blank" title="{$link.name}"><img src="{$link.logo}" alt="{$link.name}" border="0" /></a>
    <!--结束图片类型的友情链接{/foreach}-->
    <!-- {if $txt_links} -->
    <!--开始文字类型的友情链接{foreach from=$txt_links item=link}-->
    [<a href="{$link.url}" target="_blank" title="{$link.name}">{$link.name}</a>]
    <!--结束文字类型的友情链接{/foreach}-->
    <!-- {/if} -->
  </div>
 </div>
</div>
<!--{/if}-->
<!--友情链接 end-->
<div id="PageFooter">
	<div class="PageFooter"><!-- #BeginLibraryItem "/library/page_footer.lbi" --> <!-- #EndLibraryItem --></div>
</div>
<script>
$(function(){
	$(".f_user_info a").find("br").remove();
});
</script>
</body>
</html>
