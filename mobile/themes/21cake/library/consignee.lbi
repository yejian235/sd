<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<dl>
  <dd class="dd1">{$lang.consignee_name}:</dd>
  <dd class="dd2">
  <div class="inputBg_touchBg">
    <input name="consignee" placeholder="{$consignee.consignee|escape}"  type="text" class="inputBg_touch" id="consignee_{$sn}" value="{$consignee.consignee|escape}" />
	</div></dd>
</dl>
<dl>
  <dd class="dd1">{$lang.mobile}：</dd>
  <dd class="dd2">
   <div class="inputBg_touchBg">
    <input name="mobile" type="text" placeholder="{$consignee.mobile|escape}" class="inputBg_touch"  id="mobile_{$sn}" value="{$consignee.mobile|escape}" />
   </div></dd>
</dl>

<!-- {if $real_goods_count gt 0} --> 
<!-- 购物车中存在实体商品显示国家和地区 -->
<dl>
  <dd class="dd1">{$lang.country_province}</dd>
  <dd class="dd2"> 
    <select name="country" id="selCountries_{$sn}" class="sel" onchange="region.changed(this, 1, 'selProvinces_{$sn}')" style="padding:2px">
        <option value="0">{$lang.please_select}{$name_of_region[0]}</option>
        <!-- {foreach from=$country_list item=country} -->
    <option value="{$country.region_id}" {if $consignee.country eq $country.region_id}selected{/if}>{$country.region_name}</option>
    <!-- {/foreach} -->
    </select>

    <select name="province" id="selProvinces_{$sn}" class="sel" onchange="region.changed(this, 2, 'selCities_{$sn}')" style=" padding:2px">
      <option value="0">{$lang.please_select}{$name_of_region[1]}</option>
      <!-- {foreach from=$province_list item=province} -->
      <option value="{$province.region_id}" {if $consignee.province eq $province.region_id}selected{/if}>{$province.region_name}</option>
      <!-- {/foreach} -->
    </select>
    <select name="city" id="selCities_{$sn}" class="sel" onchange="region.changed(this, 3, 'selDistricts_{$sn}')" style=" padding:2px">
      <option value="0">{$lang.please_select}{$name_of_region[2]}</option>
      <!-- {foreach from=$city_list.$sn item=city} -->
      <option value="{$city.region_id}" {if $consignee.city eq $city.region_id}selected{/if}>{$city.region_name}</option>
      <!-- {/foreach} -->
    </select>
    <select name="district" id="selDistricts_{$sn}" class="sel" {if !$district_list.$sn}style="display:none"{/if} style=" padding:2px">
      <option value="0">{$lang.please_select}{$name_of_region[3]}</option>
      <!-- {foreach from=$district_list.$sn item=district} -->
      <option value="{$district.region_id}" {if $consignee.district eq $district.region_id}selected{/if}>{$district.region_name}</option>
      <!-- {/foreach} -->
    </select></dd>
</dl>
<!-- {/if} --> 

<!-- {if $real_goods_count gt 0} --> 
<!-- 购物车中存在实体商品显示详细地址以及邮政编码 -->
<dl>
  <dd class="dd1">{$lang.detailed_address}</dd>
  <dd class="dd2">
  <div class="inputBg_touchBg">
    <input name="address" placeholder="详细地址(必填)" type="text" class="inputBg_touch"  id="address_{$sn}" value="{$consignee.address|escape}" />
    </div>
    </dd>
</dl>
<!-- {/if} --> 

